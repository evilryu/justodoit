<div class='col-lg-5'>
	<query-products products = '{products}'>
	<div class="pull-left search-container">
		<input class="form-control search-inventory" type="text" placeholder="Buscar producto">
	</div>
	{{#products.length}}
	<table class="table table-hover table-bordered">
		<thead>
			<tr>
				<th> Codigo </th>
				<th> Nombre </th>
				<th> Cantidad </th>
				<th> Proveedor </th>
			</tr>
		</thead>
		<tbody>
			{{#each products}}
			<tr can-click='selectProduct'>
				<td> {{CODE}} </td>
				<td> {{NAME}} </td>
				<td> {{QUANTITY_INVENTORY}} </td>
				<td> {{PROVIDER}} </td>
			</tr>
			{{/each}}
		</tbody>
	</table>
	{{/products.length}}
	</query-products>
</div>