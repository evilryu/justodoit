<div class="container col-lg-8 col-lg-offset-4">
	<div class="form-horizontal col-lg-12">
		<div class="form-group">
			<label class="col-sm-2 control-label">Codigo</label>
			<div class="col-sm-4">
				<input type="text" class="form-control flat input-hg" placeholder="Codigo" can-value='product.code'>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Nombre</label>
			<div class="col-sm-4">
				<input type="text" class="form-control flat input-hg" placeholder="Nombre" can-value='product.name'>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Precio</label>
			<div class="col-sm-4">
				<input type="text" class="form-control flat input-hg" placeholder="Precio" can-value='product.price'>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Cantidad</label>
			<div class="col-sm-4">
				<input type="text" class="form-control flat input-hg" placeholder="Cantidad" can-value='product.quantity'>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Cantidad Alerta</label>
			<div class="col-sm-4">
				<input type="text" class="form-control flat input-hg" placeholder="Cantidad Alerta" can-value='product.threshold'>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Cobra Impuesto?</label>
			<div class="col-sm-4">
				<input type='checkbox' can-value='product.tax'> {{#if product.tax}} Si {{else}} No {{/if}}
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Proveedor</label>
			<div class="col-sm-4">
				<select class="form-control select select-primary select-block" can-value="product.provider">
					<option value="">Seleccionar Proveedor</option>
					{{#each providers}}
					<option value="{{_id}}">{{name}}</option>
					{{/each}}
				</select>
			</div>
		</div>
		<div class='form-group'>
			<div class="col-sm-10 col-sm-offset-2">
				<button class="btn btn-info btn-hg" id='create-prod'>Crear</button>
				<button class="btn btn-warning btn-hg" id='cancel-prod'>Cancel</button>
			</div>
		</div>
	</div>
</div>
